{
  "version": 6,
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Developer Debug Build",
      "description": "A basic Debug configuration for local development.",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Werror",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "debug-macos",
      "inherits": "debug",
      "displayName": "MacOS Debug Build (LLVM Clang)",
      "description": "Debug build using Homebrew LLVM Clang for C++20/23 support.",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/opt/homebrew/opt/llvm/bin/clang",
        "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Werror -I/opt/homebrew/opt/llvm/include",
        "CMAKE_EXE_LINKER_FLAGS": "-L/opt/homebrew/opt/llvm/lib/c++ -L/opt/homebrew/opt/llvm/lib/unwind -lunwind",
        "CMAKE_SHARED_LINKER_FLAGS": "-L/opt/homebrew/opt/llvm/lib/c++ -L/opt/homebrew/opt/llvm/lib/unwind -lunwind"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "debug-macos",
      "configurePreset": "debug-macos"
    },
    {
      "name": "tests",
      "displayName": "Build Zenith Tests",
      "description": "Builds the Zenith unit tests.",
      "configurePreset": "debug",
      "targets": ["ZenithTests"]
    },
    {
      "name": "tests-macos",
      "displayName": "Build Zenith Tests (MacOS)",
      "description": "Builds the Zenith unit tests using LLVM Clang.",
      "configurePreset": "debug-macos",
      "targets": ["ZenithTests"]
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    },
    {
      "name": "debug-macos",
      "configurePreset": "debug-macos",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    }
  ]
}
